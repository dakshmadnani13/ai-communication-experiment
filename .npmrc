# Hardware-optimized npm configuration for 8-core laptop
# Memory and performance optimizations
maxsockets=8
prefer-offline=true
audit=false
fund=false
update-notifier=false

# Network optimizations
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=3
fetch-retry-factor=10

# Build optimizations
engine-strict=true
save-exact=false
package-lock=true

# Security
audit-level=moderate
fund=false

# Performance
progress=true
loglevel=warn
